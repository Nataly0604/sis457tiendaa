@model LoginViewModel

@{
    ViewData["Title"] = "Login !";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-pink">Login</h1>

<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" class="shadow p-4 rounded" style="background-color: #fdeef4;">
    <div class="font-weight-bold text-center mb-3" style="color: #c2185b;">Iniciar Sesión</div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="usuario" class="control-label text-pink-dark"></label>
        <input asp-for="usuario" class="form-control border-pink" placeholder="Usuario" required />
        <span asp-validation-for="usuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="clave" class="control-label text-pink-dark"></label>
        <input asp-for="clave" type="password" class="form-control border-pink" placeholder="Contraseña" required />
        <span asp-validation-for="clave" class="text-danger"></span>
    </div>
    <div class="row mt-4">
        <div class="col-6">
            <div class="form-check">
                <input type="checkbox" name="recordarme" id="recordarme" class="form-check-input" />
                <label for="recordarme" class="form-check-label text-pink-dark">Recordarme</label>
            </div>
        </div>
        <div class="col-6 text-end">
            <input type="submit" value="Iniciar Sesión" class="btn btn-pink btn-block" />
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-controller="Account" asp-action="ResetPassword" class="text-pink-dark">¿Se te olvidó la contraseña?</a>
    </div>
</form>

@* Estilos personalizados *@
<style>
    .text-pink {
        color: #f06292;
    }

    .text-pink-dark {
        color: #c2185b;
    }

    .btn-pink {
        background-color: #f06292;
        color: white;
        border: none;
    }

        .btn-pink:hover {
            background-color: #ec407a;
            color: white;
        }

    .border-pink {
        border: 1px solid #f06292;
    }

    .form-control:focus {
        border-color: #ec407a;
        box-shadow: 0 0 0 0.2rem rgba(236, 64, 122, 0.25);
    }

    .shadow {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>
